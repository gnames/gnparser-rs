   "î" |"ï" |"ð" |"ñ" |"ò" |"ó" |"ó" |"ô" |"õ" |"ö" |"ø" |"ù" |"ú" |"û" |
   "ü" |"ý" |"ÿ" |"ā" |"ă" |"ą" |"ć" |"ĉ" |"č" |"ď" |"đ" |"'" |"ē" |"ĕ" |
   "ė" |"ę" |"ě" |"ğ" |"ī" |"ĭ" |"İ" |"ı" |"ĺ" |"ľ" |"ł" |"ń" |"ņ" |"ň" |
   "ŏ" |"ő" |"œ" |"ŕ" |"ř" |"ś" |"ş" |"š" |"ţ" |"ť" |"ũ" |"ū" |"ŭ" |"ů" |
   "ű" |"ź" |"ż" |"ž" |"ſ" |"ǎ" |"ǔ" |"ǧ" |"ș" |"ț" |"ȳ" |"ß") }

Year = { YearRange | YearApprox | YearWithParens | YearWithPage | YearWithDot |
