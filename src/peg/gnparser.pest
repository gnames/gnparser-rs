AuthorSep1 = _{ Sp? ~ ("," ~ Sp)? ~ ( "&" | "et" | "and" | "apud") ~ Sp? }

AuthorSep2 = _{ Sp? ~ "," ~ Sp? }

Author = { Author2 }

Author2 = _{ AuthorWord ~ (Sp? ~ AuthorWord)* }

AuthorWord = { CapAuthorWord ~ "."? }

CapAuthorWord = _{ AuthorUpperChar ~ AuthorLowerChar* }

